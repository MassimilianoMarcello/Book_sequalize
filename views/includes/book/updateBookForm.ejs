<form action="/books/update-book/<%= book.id %>?_method=PUT" method="POST" class="update-book-form">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= book.title %>" required>
    
    <label for="author">Author:</label>
    <input type="text" id="author" name="author" value="<%= book.author %>" required>

    <label for="price">Price:</label>
    <input type="number" id="price" name="price" value="<%= book.price %>" required>

    <label for="year">Year:</label>
    <input type="number" id="year" name="year" value="<%= book.year %>" required>

    <label for="description">Description:</label>
    <textarea id="description" name="description"><%= book.description %></textarea>

    <button type="submit">Update Book</button>
</form>


<button class="retour-button mt-4">
    <a href="/books/books">Back to Books List</a>
</button>

